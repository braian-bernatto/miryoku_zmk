/ {
  behaviors {
    u_mt: u_mt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      quick-tap-ms = <200>;             // Increased to better handle double-taps
      require-prior-idle-ms = <150>;    // Keep this for typing flow
      flavor = "balanced";              // Changed to balanced for better tap/hold discrimination
      bindings = <&kp>, <&kp>;
      hold-trigger-key-positions = <0>;  
      hold-trigger-on-release;          
      global-quick-tap;                 // Add this to prevent double-taps when rolling keys
      hold-while-undecided;            // Add this to improve modifier behavior
    };
    u_lt: u_lt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      quick-tap-ms = <175>;             // Enable tap-tap-hold to repeat
      flavor = "tap-preferred";
      bindings = <&mo>, <&kp>;
      retro-tap;                        // Output tap on release if no other key pressed
    };
  };
};
